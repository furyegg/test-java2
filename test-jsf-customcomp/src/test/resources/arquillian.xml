<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<container qualifier="jbossas-managed" default="true">
		<configuration>
			<!-- <property name="jbossHome">D:/jboss/jboss-eap-6.1.0.Alpha</property> -->
			<property name="jbossHome">D:/ocelothome-cj/jboss-eap-6.1.0.Alpha</property>
		</configuration>
	</container>

	<extension qualifier="selenium">
		<property name="browser">*googlechrome</property>
	</extension>

	<extension qualifier="webdriver">
		<property name="browser">chrome</property>
		<property name="chromeDriverBinary">D:/selenium/chromedriver.exe</property>
		<!-- <property name="browser">phantomjs</property> -->
	</extension>
	
	<extension qualifier="drone">
		<property name="instantiationTimeoutInSeconds">180</property>
	</extension>

</arquillian>